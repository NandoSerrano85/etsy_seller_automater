# Production Environment Configuration for QNAP NAS
# Copy this file to .env.prod and fill in your production values

# Deployment Configuration
PROJECT_NAME=printer-automater
GITHUB_REPOSITORY=your-github-username/your-repo-name
DOCKER_REGISTRY=ghcr.io

# Database Configuration
DB_USER=printer_automater_user
DB_PASSWORD=your_secure_database_password_here
DB_NAME=printer_automater_prod

# Backend Configuration  
BACKEND_PORT=8080
FRONTEND_URL=https://printer-automater.netlify.app
DISABLE_REGISTRATION=true

# Etsy API Configuration (Required)
ETSY_CLIENT_ID=your_etsy_client_id_here
ETSY_CLIENT_SECRET=your_etsy_client_secret_here
ETSY_REDIRECT_URI=http://printmadenas.myqnapcloud.com:8080/auth/etsy/callback

# JWT Configuration
JWT_SECRET=your_very_long_secure_jwt_secret_here_min_64_chars_recommended
JWT_SECRET_KEY=your_very_long_secure_jwt_secret_here_min_64_chars_recommended
JWT_EXPIRES_IN=24h

# Stripe Payment Configuration
STRIPE_API_KEY=sk_live_your_stripe_live_secret_key
STRIPE_PUBLIC_KEY=pk_live_your_stripe_live_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
TEMP_PATH=/app/temp

# CORS Configuration
CORS_ORIGIN=https://printer-automater.netlify.app

# SSL/HTTPS Configuration (if using reverse proxy)
USE_HTTPS=false
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log

# Performance Configuration
WORKER_PROCESSES=2
WORKER_CONNECTIONS=1000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/share/printer-automater/backups